@import url('https://fonts.googleapis.com/css?family=Raleway')
body, html	
	background white
	font-family 'Raleway', sans-serif
	margin 0
	height 100%
	font-weight 300
h1
	text-align center
	font-weight 700
.highlight {
  background-color #fff
  box-shadow 10px 10px
  border-style solid
  border-width 2px
  flex-wrap wrap
  border-color #00aeef
  color #00aeef
  padding 5px
  margin 10px
  text-align center
}
.white
	color white

.fa.fa-linkedin, .fa.fa-github
	color white
	flex-grow 1
	font-size 20px
	padding 10px
	margin 5px
	border-width 1px
	border-style solid
	border-color #fff
	color #fff
	transition all 0.5s
	&:hover
		cursor pointer
		padding 15px
		font-size 40px

.container
	display flex
	justify-content center
	width 95%
	max-width 1000px
	margin 0 auto
	flex-wrap wrap
	text-align center

.heroPad
	padding-top 300px
	width 80px
.white-box
	box-shadow 5px 5px
	border-style solid
	border-width 3px
	border-color #fff
	color #fff
	margin 10px
.item
	box-shadow 5px 5px
	border-style solid
	border-width 3px
	border-color #00aeef
	color #00aeef
	margin 10px
	img
		filter grayscale(100%)
		transition all 0.5s
		max-height 10em
		&:hover
			max-height 12em
			filter grayscale(0%)
.logo, svg
	width 80%
	
.heroText
	color white
	width 100%
.space
	padding-bottom 30px
.showcase
	display flex
	flex-wrap wrap
	justify-content center
	align-items center
	margin 0 auto 
	height 100%
	
#sectionBlue
	background-color #00aeef
	background-repeat no-repeat
	background-size cover
	height 100%
	display flex
	justify-content center
	align-items center

#sectionPort
	background-image url(https://image.ibb.co/etXNpn/portrait.png)
	background-repeat no-repeat
	background-size cover
	height 100%
	display flex
	justify-content center
	align-items center
	flex wrap
	
.blue
	color #00aeef

.button
	border-radius 4px
	background-color #fff
	border none
	color #000
	text-align center
	font-size 28px
	padding 20px
	width 150px
	transition all 0.5s
	cursor pointer
	margin 5px
	&:hover
		padding 25px
		font-size 40px
		

@media screen and (max-width 700px)
	.center
		flex-wrap wrap
	.item
		box-shadow 5px 5px
		border-style solid
		border-width 3px
		border-color #00aeef
		color #00aeef
		margin 10px
		img
			max-height 5em
			&:hover
				max-height 7em
	.heroText
		font-size 0.8rem
		text-align center
		color white